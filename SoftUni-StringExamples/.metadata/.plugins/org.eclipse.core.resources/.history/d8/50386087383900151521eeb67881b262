package strings;

public class UserInfoExtractor {

	public static void main(String[] args) {
		String firstName = "Svetlin";
		String secondName = "Nakov";
		String fullName = firstName + " " + secondName;
		System.out.println(fullName);
		int age = 28;
		String nameAndAge = "Name: " + fullName + "\nAge: " + age;
		System.out.println(nameAndAge);
		
		//IndexOf
		String book = "Introduction to Java book";
		int index = book.indexOf("o");
		int lastIndex = book.lastIndexOf("o");
		System.out.println(index);
		System.out.println(lastIndex);
		
		String quote =  "The main subject in the \"Intro Java\"" +
				" book is Java for Java newbies.";
		int index2 = quote.indexOf("Java");
		while (index2 != -1) {
			System.out.println("Java found on index: " + index2);
			index2 = quote.indexOf("Java", index2 + 1);
		}
		System.out.println();
		String str = "Java Programming Course";
		
		int index3 = str.indexOf("Java");// index3 = 0
		index3 = str.indexOf("Course");//index3 = 17
		index3 = str.indexOf("COURSE");//index3 = -1
		index3 = str.indexOf("ram");//index3 = 9
		index3 = str.indexOf("r");//index3 = 6
		index3 = str.indexOf("r", 7); // index3 = 9
		index3 = str.indexOf("r", 10); // index3 = 20
		
		//substring
		String path = "C:\\Pics\\Rila2008.jpg";
		String filename = path.substring(8,16);
		System.out.println(filename);
		
		String path2 = "C:\\Pics\\Rila2008.jpg";
		int index4 = path.lastIndexOf("\\"); // index = 7
		String fullNameFile = path.substring(index4 + 1);
		System.out.println(fullNameFile);
		
		String listOfBeer = "Amstel, Zagorka, Tuborg, Becks.";
		String[] beersArr = listOfBeer.split("[., ]");
		for (String beers:beersArr) {
			if (beers != "") {
				System.out.println(beers);
			}
			
		}

		
		
	}

}
