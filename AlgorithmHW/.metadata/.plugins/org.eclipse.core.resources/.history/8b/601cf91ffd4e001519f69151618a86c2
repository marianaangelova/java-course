	public static void sortDescendingOrder(int[] array){
		int swap = 0;
		for (int i = 0; i < 10; i++) {
		      for (int j = 0; j < 10 - i; j++) {
		        if (array[j] > array[j+1]) /* For descending order use < */
		        {
		          swap = array[j];
		          array[j]   = array[j+1];
		          array[j+1] = swap;
		        }
		      }
	}
	}
}
