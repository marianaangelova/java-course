package shortWords;

import java.util.LinkedList;
import java.util.Queue;

public class ShorterThanThree {

	public static void main(String[] args) {
		String text = "My spaceship is ready for travelling to Mars.";
		Queue<String>queue = new LinkedList<String>();
		String[] textArray = text.split(" ");
		for (int i = 0; i < textArray.length; i++) {
			if (textArray[i].length() >= 3) {
				queue.offer(textArray[i]);
			}
		}
		while (!queue.isEmpty()) {
			String current = queue.poll();
			System.out.print(current+" ");
		}
		
		//Solution with regex:
//		String passage = "My spaceship is ready for travelling to Mars.";
//	    System.out.println(passage);
//
//	    passage = passage.replaceAll("\\b[\\w']{1,2}\\b", "");
//
//	    System.out.println(passage);
	}

}
