package shortWords;

import java.util.LinkedList;
import java.util.Queue;

public class ShorterThanThree {

	public static void main(String[] args) {
		String text = "I am from planet Earth";
		Queue<String>queue = new LinkedList<String>();
		String[] textArray = text.split(" ");
		for (int i = 0; i < textArray.length; i++) {
			if (textArray[i].length() >= 3) {
				queue.offer(textArray[i]);
			}
		}
		queue.toString();
		System.out.println(queue);
		
		//Solution with regex:
//		String passage = "Well, I'm looking for a regexp in Java that deletes all words shorter than 3 characters.";
//	    System.out.println(passage);
//
//	    passage = passage.replaceAll("\\b[\\w']{1,2}\\b", "");
//
//	    System.out.println(passage);
	}

}
